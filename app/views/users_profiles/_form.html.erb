
<% form_name ||= "Manage" %>
<h1 class="text-center"> <%= form_name %> Profile </h1>
<%= form_for @profileUser , method: (form_name.downcase == 'edit' ? 'put' : 'post'),:html => {:multipart => true} do |f| %>
  <% if @profileUser.errors.any? %>
       <div class="alert alert-danger center">
         <h2 class="title">
           <%= pluralize(@profileUser.errors.count, "error") %> prohibited
           this article from being saved:
         </h2>
         <ul class="nav navbar">
           <% @profileUser.errors.full_messages.each do |msg| %>
             <li><%= msg %></li>
           <% end %>
         </ul>
       </div>
  <% end %>

  <div class="form-group">
   <%= f.label :name%>
   <%= f.text_field :name, class: "form-control" %>
 </div>

 <div class="form-group">
   <%= f.label :last_name%>
   <%= f.text_field :last_name, class: "form-control" %>
 </div>
 <div class="form-group">
   <%= f.label :nick_name%>
   <%= f.text_field :nick_name, class: "form-control" %>
 </div>

 <div class="form-group">
   <%= f.label :image%>
   <%= f.file_field :image, class: "form-control" %>
 </div>

 <%= f.submit "#{form_name} User", class: "btn btn-primary" %>

<% end %>
